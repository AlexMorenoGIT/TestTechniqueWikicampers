{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> 
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <script src="https://kit.fontawesome.com/5fbdf29340.js" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar">
                <a class="navbar-brand" href="/">
                    <img src="{{ asset('assets/images/logo-wikicampers.png') }}" alt="Logo de Wikicampers" width="240">
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="active">Véhicules</a>
                        <a href="/create-vehicle" class="not-active">Ajouter un véhicule</a>
                    </li>
                </ul>
                {% if app.user %}
                    <a href="/logout" id="logout">Déconnexion</a>
                {% else %}
                    <a href="/login" id="login">Connexion</a>
                {% endif %}
            </nav>
        </header>
        <div class="main-container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>